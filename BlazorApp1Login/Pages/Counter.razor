@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCounts</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount, currentCounts = 0;

    private void IncrementCount()
    {
        currentCount++;
        currentCounts = currentCount*2;
    }
}
